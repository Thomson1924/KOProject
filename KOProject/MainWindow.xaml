<Window x:Class="KOProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KOProject"
        mc:Ignorable="d"
        Title="Wyszukiwarka KO" Height="450" Width="800" MinHeight="450" MinWidth="800" ResizeMode="CanMinimize">
    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1" Width="790" Height="45">
            <TextBox x:Name="tbSearch" TextAlignment="Left" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" FontSize="14" MaxLines="1" IsUndoEnabled="True" AcceptsTab="True" TextOptions.TextFormattingMode="Display"/>
            <Button x:Name="bt_Search" Content="Wyszukaj" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top" Width="75" Height="25"/>
        </Grid>
        <Grid HorizontalAlignment="Left" MinHeight="363" Margin="10,46,0,0" VerticalAlignment="Top" Height="338" MinWidth="296" >
            <ListBox x:Name="lb_Auctions" HorizontalAlignment="Center" Width="296" Margin="0,37,0,10"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" Text="Znalezione Produkty:" VerticalAlignment="Top" Width="181" Height="22" FontSize="16"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="363" Margin="313,46,0,0" VerticalAlignment="Top" Width="471">
            <TextBlock x:Name="tb_AuctionTitle" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Tutaj będzie tytuł aukcji" VerticalAlignment="Top" Height="35" Width="451" FontSize="26" TextAlignment="Center" TextDecorations="Underline"/>
            <Image x:Name="img_AuctionImage" HorizontalAlignment="Left" Height="259" Margin="235,47,0,0" VerticalAlignment="Top" Width="226" Source="logo.png" Stretch="Fill" Cursor="Hand"/>
            <TextBlock x:Name="tb_PriceText" HorizontalAlignment="Left" Margin="235,332,0,0" TextWrapping="Wrap" Text="Cena: " VerticalAlignment="Top" Width="46" TextAlignment="Right" FontSize="16"/>
            <TextBlock x:Name="tb_Price" HorizontalAlignment="Left" Margin="286,311,0,0" TextWrapping="Wrap" Text="Cena,-" VerticalAlignment="Top" Height="43" Width="108" FontSize="36"/>
            <Button x:Name="bt_GoToStore" Content="Przejdź!" HorizontalAlignment="Left" Margin="399,326,0,0" VerticalAlignment="Top" Width="62" Height="27"/>
            <TextBlock x:Name="tb_AuctionDescription" HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="Tutaj będzie opis produktu" VerticalAlignment="Top" Height="306" Width="220" FontSize="16" TextAlignment="Justify"/>
        </Grid>
    </Grid>
</Window>
